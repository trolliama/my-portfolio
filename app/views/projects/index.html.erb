<div id="projects-navbar">
  <%= render partial: 'shared/nav', layout: 'layouts/nav_light_layout' %>
</div>

<div id="projects">
  <div class="bg-dark py-5">
    <div class="container py-5 px-5">
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <div class="text-center my-5">
            <h1 class="display-5 fw-bolder text-white mb-2">Meus Projetos</h1>
            <p class="lead text-white-50 mb-4">
              Encontre meus projetos aqui.<br>
               Filtre por tecnologias usadas ou 
              por skills relacionadas. <br>
              Ex: python, ruby, software engineer, finance
            </p>
          </div>
        </div>
      </div>
      <div class="row pb-5 mb-4">
        <div class="col-3"></div>
        <div class="col-6 pl-5 ml-2">
          <div class="input-group">
            <%= form_with url: project_search_path, method: :get, html: {class: "form-inline"} do |form| %>
              <%= form.text_field :query , class: "form-control", placeholder: "Tecnologias... (Ex: python, heroku)"%>
              <button type="submit" class="btn btn-info">
                <%= icon("fas", "search") %>
              </button>
            <% end %>
          </div>
        </div>
        <div class="col-3"></div>
      </div>
    </div>
  </div>
  <div class="container-fluid py-5">
    <div class="row">
      <div class="col-12">
        <% if !@projects.empty? %>
          <div class="cards">
            <div class="row">
            <%= render partial: "shared/project_item", collection: @projects %>
            </div>
          </div>
        <% else %>
          <%= render "project_not_found" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= javascript_pack_tag 'projects' %>
<%= javascript_pack_tag 'changeNavLogo' %>