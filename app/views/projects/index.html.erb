<div id="projects-navbar">
  <%= render partial: 'shared/nav', layout: 'layouts/nav_light_layout' %>
</div>

<div class="bg-dark py-5">
  <div class="container py-5 px-5">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="text-center my-5">
          <h1 class="display-5 fw-bolder text-white mb-2">My Projects</h1>
          <p class="lead text-white-50 mb-4">
            Quickly design and customize responsive mobile-first sites with
            Bootstrap, the worldâ€™s most popular front-end open source toolkit!
          </p>
        </div>
      </div>
    </div>
    <div class="row pb-5 mb-4">
      <div class="col-3"></div>
      <div class="col-6 pl-5 ml-2">
        <div class="input-group">
          <%= form_with url: project_search_path, method: :get, html: {class: "form-inline"} do |form| %>
            <%= form.text_field :query , class: "form-control", placeholder: "Technologies... (Ex: python, aws)"%>
            <button type="submit" class="btn btn-info">
              <i class="fas fa-search"></i>
            </button>
          <% end %>
        </div>
      </div>
      <div class="col-3"></div>
    </div>
  </div>
</div>
<div class="container-fluid py-5">
  <div class="row">
    <div class="col-12">
      <% if !@projects.empty? %>
        <div class="cards">
          <%= render partial: "shared/project_item", collection: @projects %>
        </div>
      <% else %>
        <%= render "project_not_found" %>
      <% end %>
    </div>
  </div>
</div>

<%= javascript_pack_tag 'projects' %>